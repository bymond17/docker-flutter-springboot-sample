# 1단계: Flutter 빌드 환경
FROM ubuntu:22.04 AS build-env

# 필수 패키지 설치
RUN apt-get update && apt-get install -y curl git unzip xz-utils libglu1-mesa

# Flutter SDK 설치 (변경이 적으므로 상단에 배치하여 캐싱)
RUN git clone https://github.com/flutter/flutter.git -b stable /usr/local/flutter
ENV PATH="/usr/local/flutter/bin:/usr/local/flutter/bin/cache/dart-sdk/bin:${PATH}"
RUN flutter config --enable-web && flutter doctor

WORKDIR /app
COPY . .
RUN flutter pub get
# 빌드 시점에 API 주소를 주입할 수 있도록 설정
RUN flutter build web --release --dart-define=BASE_URL=${BASE_URL}

# 2단계: Nginx 서빙
FROM nginx:stable-alpine
COPY --from=build-env /app/build/web /usr/share/nginx/html
# Nginx 설정 파일 커스텀 (SPA 라우팅 대응 필요 시)
# COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]